<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+android:id/dialog_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical" 
	android:background="#80ffffff"
    >
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_alignParentTop="true">
	
    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
		android:background="#00000000"
		android:textColor="#ff000000"
		android:text="@string/delay_title"
		android:textSize="20sp"/>
  	</LinearLayout>

	<LinearLayout android:id="@+id/seek_layout"
		android:layout_width="540dip"
		android:layout_height="wrap_content"
		android:paddingBottom="20dip"
   		android:background="#a0ffffff"
		android:orientation="vertical" >
		<TextView android:id="@+id/delay_schedule"	    
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#ff000000"
	        android:paddingLeft="15dip"
	        android:singleLine="true"
	    />
	    <SeekBar
	        android:id="@+id/seekbar_delay_progress"
	        style="@style/SeekBarDelay"
		    android:layout_width="500dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:max="100"
	        android:progress="20"
	        />
	</LinearLayout>	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#00000000"
		android:paddingTop="5dip"
		android:paddingBottom="5dip"
		android:layout_gravity="center"
		android:layout_alignParentBottom="true">
	
		<Button android:id="@+id/delay_confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="50dip"
			android:paddingRight="50dip"
			android:text="@string/confirm_button"/>
	</LinearLayout>
	
</LinearLayout>
